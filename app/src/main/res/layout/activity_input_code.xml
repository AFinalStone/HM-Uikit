<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/check_hideCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="是否隐藏数字" />

    <Button
        android:id="@+id/btn_checkFailed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="校验失败" />

    <Button
        android:id="@+id/btn_clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="清空输入的内容" />

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/check_hideKeyboardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="是否隐藏键盘标题" />

    <com.hm.iou.uikit.keyboard.input.HMInputCodeView
        android:id="@+id/inputCodeVie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />

</LinearLayout>
