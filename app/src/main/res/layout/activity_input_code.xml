<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/check_hideCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:text="是否隐藏数字" />

    <Button
        android:id="@+id/btn_checkFailed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/check_hideCode"
        android:text="校验失败" />

    <Button
        android:id="@+id/btn_clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_checkFailed"
        android:text="清空输入的内容" />

    <com.hm.iou.uikit.keyboard.input.HMInputCodeView
        android:id="@+id/inputCodeVie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_clear"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

</RelativeLayout>
