<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hm.iou.uikit.demo.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="50dp"
        android:paddingTop="100dip">


        <Button
            style="@style/UikitHMButton.Small.Bordered"
            android:layout_width="52dip"
            android:layout_height="30dip"
            android:text="删除" />


        <com.hm.iou.uikit.HMTopBarView
            android:id="@+id/topbar"
            android:layout_width="match_parent"
            android:layout_height="72dip"
            app:backIcon="@mipmap/uikit_icon_close_black"
            app:bottomDividerIsShow="false"
            app:rightIcon="@mipmap/uikit_ic_menu_back_black"
            app:rightText="更多"
            app:titleText="我的标题">

        </com.hm.iou.uikit.HMTopBarView>

        <com.hm.iou.uikit.ClearEditText
            android:id="@+id/et_clear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="自动清除框" />

        <com.hm.iou.uikit.keyboard.input.HMKeyboardEditText
            android:id="@+id/edit_testInputNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="自定义数字输入法" />

        <com.hm.iou.uikit.keyboard.input.HMKeyboardEditText
            android:id="@+id/edit_testInputABC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="自定义字母输入法" />

        <Button
            android:id="@+id/btn_loading_dialog"
            style="@style/UikitHMButton.Large.Bordered"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:text="显示LoadingDialog" />

        <Button
            android:id="@+id/btn_alert_dialog"
            style="@style/UikitButton"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:text="显示AlertDialog" />

        <Button
            android:id="@+id/btn_dialogCommon"
            style="@style/UikitButton"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:text="显示[知道了]对话框 " />

        <com.hm.iou.uikit.PullDownRefreshImageView
            android:id="@+id/pd_iv"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_marginTop="5dp" />


        <Button
            android:id="@+id/btn_tab"
            style="@style/UikitButton"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:text="TabBar" />

        <Button
            android:id="@+id/btn_actionsheet"
            style="@style/UikitButton"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:text="ActionSheet" />

        <Button
            android:id="@+id/btn_hindShowPassword"
            style="@style/UikitButton"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:text="切换隐藏和显示的密码输入框" />

        <Button
            android:id="@+id/btn_showDatePick"
            style="@style/UikitButton"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:text="时间选择控件" />

        <com.hm.iou.uikit.HMCountDownTextView
            android:id="@+id/tv_getCheckCode"
            style="@style/UikitButton.CheckCode"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="获取验证码" />


        <com.hm.iou.uikit.HMLoadingView
            android:id="@+id/hmloadingview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp" />

        <Button
            android:id="@+id/btn_permission"
            style="@style/UikitButton"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:text="权限弹窗" />

        <Button
            android:id="@+id/btn_inputCode"
            style="@style/UikitButton"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:text="数字/密码输入框" />

        <Button
            android:id="@+id/btn_bottomTabView"
            style="@style/UikitButton"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:text="BottomTabView控件" />

        <Button
            android:id="@+id/btn_horizontalRecyclerView"
            style="@style/UikitButton"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:text="左右滑动切换页面" />

        <Button
            android:id="@+id/btn_verticalRecyclerView"
            style="@style/UikitButton"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:text="上下滑动切换页面" />

        <Button
            android:id="@+id/btn_timePickerDialog"
            style="@style/UikitButton"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:text="时间滚轮" />

        <com.hm.iou.uikit.SmoothCheckBox
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp" />

        <com.hm.iou.uikit.HMBottomBarView
            android:id="@+id/bottom_navview"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            app:bottomBackText="返回描述"
            app:bottomTitleText="这是一个按钮" />


        <Button
            android:id="@+id/btn_circleView"
            style="@style/UikitButton"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:text="点号导航器控件" />


        <com.hm.iou.uikit.HMDotTextView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="5dp"
            app:dotBackgroundColor="@color/uikit_function_exception"
            app:dotText="101"
            app:dotTextColor="@color/white"
            app:dotTextSize="@dimen/textFontSize_12" />

        <com.hm.iou.uikit.HMDotTextView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="5dp"
            app:dotBackgroundColor="@color/uikit_function_exception"
            app:dotText="1"
            app:dotTextColor="@color/white"
            app:dotTextSize="@dimen/textFontSize_12" />


        <com.hm.iou.uikit.HMDotTextView
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_marginTop="5dp"
            app:dotBackgroundColor="@color/uikit_function_exception"
            app:dotTextColor="@color/white"
            app:dotTextSize="@dimen/textFontSize_12" />

        <com.hm.iou.uikit.HMDotTextView
            android:id="@+id/dotText"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="5dp"
            app:dotBackgroundColor="@color/uikit_function_exception"
            app:dotIsShowMoreText="true"
            app:dotMoreText="..."
            app:dotTextColor="@color/white"
            app:dotTextSize="@dimen/textFontSize_12" />
    </LinearLayout>

</ScrollView>
