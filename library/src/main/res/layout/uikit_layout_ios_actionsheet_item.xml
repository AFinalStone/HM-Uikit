<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:HMApplication="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.hm.iou.uikit.SmoothCheckBox
        android:id="@+id/itemCheck"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="36dp"
        android:visibility="gone"
        HMApplication:color_checked="@color/iosActionSheet_blue" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_margin="15dp"
        android:layout_toLeftOf="@id/itemCheck"
        android:gravity="center">

        <ImageView
            android:id="@+id/itemIcon"
            android:layout_width="22dp"
            android:layout_height="22dp" />

        <TextView
            android:id="@+id/itemText"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginLeft="9dp"
            android:text="条目名称"
            android:textColor="#ff222222"
            android:textSize="@dimen/textFontSize_18" />
    </LinearLayout>

</RelativeLayout>