<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="135dp"
    android:layout_marginTop="6dp"
    android:orientation="horizontal">

    <com.hm.iou.uikit.richedittext.itemview.DataImageView
        android:id="@+id/edit_imageView"
        android:layout_width="180dp"
        android:layout_height="135dp"
        android:background="@drawable/uikit_bg_pic_loading_place"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/iv_cursor"
        android:layout_width="130dp"
        android:layout_height="135dp"
        android:src="@mipmap/uikit_icon_rich_edit_cursor" />
</LinearLayout>