<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_dialog_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:gravity="center"
        android:textColor="@color/uikit_text_main_content"
        android:textSize="@dimen/uikit_sub_title_text_size"
        tools:text="顶部对话框" />

    <View style="@style/UikitDivider.Horizontal"
        android:id="@+id/view_dialog_divider"
        />

    <FrameLayout
        android:id="@+id/fl_bottom_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>