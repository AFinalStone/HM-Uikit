<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lLayout_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/uikit_bg_alert_dialog"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text=""
        android:textColor="@color/black"
        android:textSize="@dimen/textFontSize_18"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lineSpacingMultiplier="1.3"
        android:minHeight="60dp"
        android:padding="15dp"
        android:text=""
        android:textSize="@dimen/textFontSize_16"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/fl_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_line01"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/iosAlertDialog_line"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_neg"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:background="@drawable/uikit_selector_alertdialog_left"
            android:gravity="center"
            android:textColor="@color/iosActionSheet_blue"
            android:textSize="@dimen/textFontSize_18"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_line02"
            android:layout_width="1px"
            android:layout_height="52dp"
            android:background="@color/iosAlertDialog_line"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_pos"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:background="@drawable/uikit_selector_alertdialog_right"
            android:gravity="center"
            android:textColor="@color/iosActionSheet_blue"
            android:textSize="@dimen/textFontSize_18"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>