<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_dialog_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:gravity="center"
            android:textColor="@color/uikit_text_main_content"
            android:textSize="@dimen/uikit_sub_title_text_size"
            tools:text="还款方式" />

        <TextView
            android:id="@+id/tv_dialog_confirm"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:textColor="@color/uikit_function_remind"
            android:textSize="@dimen/uikit_main_content_text_size"
            android:text="确定"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:background="?attr/selectableItemBackground"
            />

    </RelativeLayout>

    <View
        style="@style/UikitDivider.Horizontal"
        />

    <com.hm.iou.uikit.datepicker.PickerView
        android:id="@+id/picker_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.hm.iou.uikit.datepicker.PickerView>

</LinearLayout>