<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_data_empty"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    android:visibility="visible">

    <ImageView
        android:id="@+id/iv_data_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/uikit_data_empty" />

    <TextView
        android:id="@+id/tv_data_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:maxLines="1"
        android:text="您当前无任何数据"
        android:textColor="@color/uikit_text_sub_content"
        android:textSize="@dimen/uikit_main_content_text_size" />


    <TextView
        android:id="@+id/tv_data_empty_extaction"
        style="@style/UikitTextView.Normal"
        android:layout_height="28dp"
        android:text=""
        android:textColor="@color/uikit_text_sub_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:background="@drawable/uikit_bg_round_border_gray"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center"
        android:visibility="gone"
        />

</LinearLayout>