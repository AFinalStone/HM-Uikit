<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_data_fail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_data_fail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/uikit_data_fail" />

    <TextView
        android:id="@+id/tv_data_fail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:maxLines="1"
        android:text="网络加载失败，请检查网络"
        android:textColor="#ff999999"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/tv_data_fail_retry"
        android:layout_width="80dip"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dip"
        android:background="@drawable/uikit_bg_fail_retry"
        android:gravity="center"
        android:text="重新加载"
        android:textColor="#ff222222"
        android:textSize="13dp" />

</LinearLayout>