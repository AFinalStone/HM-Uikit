<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_data_fail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_data_fail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/uikit_data_fail" />

    <TextView
        android:id="@+id/tv_data_fail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:maxLines="1"
        android:text="@string/uikit_network_disconnected"
        android:textColor="@color/uikit_text_auxiliary"
        android:textSize="@dimen/uikit_main_content_text_size" />

    <TextView
        android:id="@+id/tv_data_fail_retry"
        android:layout_width="52dip"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dip"
        android:gravity="center"
        android:text="刷新"
        style="@style/UikitHMButton.Small.Main"
        />

</LinearLayout>