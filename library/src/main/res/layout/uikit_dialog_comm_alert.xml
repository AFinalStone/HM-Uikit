<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_dialog_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/uikit_bg_alert_dialog"
    android:orientation="vertical"
    android:paddingTop="20dip">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/uikit_text_main_content"
        android:textSize="@dimen/uikit_main_title_text_size"
        android:textStyle="bold"
        tools:text="新版本上线" />

    <TextView
        android:id="@+id/tv_dialog_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dip"
        android:gravity="center"
        android:textColor="@color/uikit_text_sub_content"
        android:textSize="14sp"
        android:visibility="gone"
        tools:text="为什么需要实名认证呢？" />

    <TextView
        android:id="@+id/txt_dialog_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="1.3"
        android:paddingBottom="35dip"
        android:paddingLeft="32dip"
        android:paddingRight="32dip"
        android:paddingTop="12dip"
        android:textColor="@color/uikit_text_auxiliary"
        android:textSize="@dimen/uikit_main_content_text_size"
        tools:text="这是测试内容" />

    <FrameLayout
        android:id="@+id/fl_dialog_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <View
        style="@style/UikitDivider.Horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_dialog_neg"
            style="@style/UikitHMDialogButton"
            android:layout_width="0px"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_dialog_pos"
            style="@style/UikitHMDialogButton"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>