<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/uikit_bg_alert_dialog"
    android:orientation="vertical"
    android:paddingTop="20dip"
    android:id="@+id/ll_dialog_content"
    >

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/uikit_text_main_content"
        android:textSize="@dimen/uikit_main_title_text_size"
        android:textStyle="bold"
        tools:text="新版本上线"
        />

    <TextView
        android:id="@+id/txt_dialog_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/uikit_text_auxiliary"
        android:textSize="@dimen/uikit_main_content_text_size"
        android:paddingLeft="32dip"
        android:paddingRight="32dip"
        android:paddingTop="12dip"
        android:paddingBottom="35dip"
        android:lineSpacingMultiplier="1.3"
        tools:text="这是测试内容"
        />

    <FrameLayout
        android:id="@+id/fl_dialog_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        >
    </FrameLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/uikit_divider"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_dialog_neg"
            style="@style/UikitHMDialogButton"
            android:layout_width="0px"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/btn_dialog_pos"
            style="@style/UikitHMDialogButton"
            android:layout_height="wrap_content"
            android:layout_width="0px"
            android:layout_weight="1"
            />
    </LinearLayout>

</LinearLayout>