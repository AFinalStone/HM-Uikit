<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_dialog_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:gravity="center"
            android:textColor="@color/uikit_text_main_content"
            android:textSize="@dimen/uikit_main_content_text_size"
            tools:text="时间选择" />

        <TextView
            android:id="@+id/tv_dialog_confirm"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_alignParentRight="true"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/uikit_function_remind"
            android:textSize="@dimen/uikit_main_content_text_size" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/uikit_divider" />

    <LinearLayout
        android:id="@+id/ll_dialog_picker_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <com.hm.iou.uikit.datepicker.PickerView
            android:id="@+id/pv_dialog_year"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.hm.iou.uikit.datepicker.PickerView
            android:id="@+id/pv_dialog_month"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.hm.iou.uikit.datepicker.PickerView
            android:id="@+id/pv_dialog_day"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.hm.iou.uikit.datepicker.PickerView
            android:id="@+id/pv_dialog_hour"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone"
            />

        <com.hm.iou.uikit.datepicker.PickerView
            android:id="@+id/pv_dialog_minute"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone"
            />
    </LinearLayout>

</LinearLayout>