<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/uikit_bg_alert_dialog"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_dialog_img"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28dip"
        />

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#ff222222"
        android:textSize="@dimen/textFontSize_18"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        tools:text="开启位置权限"
        android:layout_marginTop="20dip"
        />

    <TextView
        android:id="@+id/tv_dialog_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="1.3"
        android:text=""
        android:textColor="#ff666666"
        android:textSize="15sp"
        tools:text="我们需要获得该权限，才能为您提供省市头条信息及附近律师"
        android:layout_marginLeft="28dip"
        android:layout_marginRight="28dip"
        android:layout_marginTop="8dip"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/iosAlertDialog_line"
        android:visibility="visible"
        android:layout_marginTop="20dip"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_dialog_neg"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:background="@drawable/uikit_selector_alertdialog_left"
            android:gravity="center"
            android:textColor="#ff666666"
            android:textSize="@dimen/textFontSize_18"
            android:text="不允许"
            />

        <ImageView
            android:layout_width="1px"
            android:layout_height="52dp"
            android:background="@color/iosAlertDialog_line"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_dialog_pos"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:background="@drawable/uikit_selector_alertdialog_right"
            android:gravity="center"
            android:textColor="@color/iosActionSheet_blue"
            android:textSize="@dimen/textFontSize_18"
            android:text="允许"
            />
    </LinearLayout>

</LinearLayout>