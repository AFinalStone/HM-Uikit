<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/ll_dialog_content">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:gravity="center"
        android:textColor="@color/uikit_text_main_content"
        android:textSize="@dimen/uikit_sub_title_text_size"
        tools:text="还款方式"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/uikit_divider"
        />

    <com.hm.iou.uikit.MaxHeightRecyclerView
        android:id="@+id/rv_dialog_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        app:maxListHeight="300dip"
        >
    </com.hm.iou.uikit.MaxHeightRecyclerView>

</LinearLayout>