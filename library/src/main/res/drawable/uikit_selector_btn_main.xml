<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <!-- 填充颜色 -->
            <solid android:color="@color/uikit_disabled_color"></solid>
            <!-- 矩形的圆角半径 -->
            <corners android:radius="@dimen/uikit_shape_common_btn_corners_radius" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <!-- 填充颜色 -->
            <solid android:color="@color/uikit_main_color_pressed"></solid>
            <!-- 矩形的圆角半径 -->
            <corners android:radius="@dimen/uikit_shape_common_btn_corners_radius" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <!-- 填充颜色 -->
            <solid android:color="@color/uikit_main_color_pressed"></solid>
            <!-- 矩形的圆角半径 -->
            <corners android:radius="@dimen/uikit_shape_common_btn_corners_radius" />
        </shape>

    </item>
    <item>
        <shape android:shape="rectangle">
            <!-- 填充颜色 -->
            <solid android:color="@color/uikit_main_color"></solid>
            <!-- 矩形的圆角半径 -->
            <corners android:radius="@dimen/uikit_shape_common_btn_corners_radius" />
        </shape>
    </item>
</selector>
